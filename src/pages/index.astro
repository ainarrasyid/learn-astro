---
import Layout from '@/layouts/Layout.astro';
---
<Layout title="Welcome to Astro.">
	<div class="flex flex-col gap-4 w-full h-screen items-center justify-center">
    <h2>Welcome to astro project</h2>
    <button id="feedback" class="py-3 5 px-5 text-white bg-primary-blue-600 rounded-full">Create Feedback</button>
  </div>
</Layout>
<script lang="ts">
  const btnFeedback = document.getElementById('feedback')
  const gotoFeedback = () => {
    window.location.assign('/create-feedback')
  }
  btnFeedback.addEventListener('click', gotoFeedback)
</script>
